# ===window colors===

# class                 border      backgr.     text      indicator     child_border
client.focused          $nord4      $nord4      $nord0    $nord2        $nord8
client.focused_inactive $nord0      $nord0      $nord7    $nord2        $nord8
client.unfocused        $nord0      $nord0      $nord7    $nord2        $nord8
client.urgent           $nord1      $nord1      $nord7    $nord2        $nord1

client.background       #ffffff

# ===Status Bar===

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
	font              pango:Droid Sans, FontAwesome 12
  status_command    i3status -c ~/.config/i3/.i3status.conf
	separator_symbol  ":|:"
	
	colors {
    background  $nord0
    statusline  $nord7
		separator   $nord4

		#<colorclass>       <border>  <background>  <text>
		focused_workspace   $nord4    $nord4        $nord0
		active_workspace    $nord8    $nord8        $nord7
		inactive_workspace  $nord0    $nord0        $nord7
		urgent_workspace    $nord1    $nord1        $nord7
  }
}

